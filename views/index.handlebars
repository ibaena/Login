<h1 class="title">
        Welcome To ClassDb
      </h1>
<div class="columns is-mobile">
  <div class="column">
    <p class="control has-icon" action="/login" method="post">
      <input class="input" type="email" placeholder="Email" name="email">
      <i class="fa fa-envelope"></i>
    </p>
    <p class="control has-icon">
      <input class="input" type="password" placeholder="Password" name="password">
      <i class="fa fa-lock"></i>
    </p>
    <p class="control">
      <button class="button is-success is-inverted" type="submit">
        Login
      </button>
    </p>
    <span class="header-item">
      <a class="subtitle is-active" href="#">Need an account, Register Now!</a>
    </span>
  </div>
</div>
